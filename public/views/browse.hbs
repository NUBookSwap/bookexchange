</head>

<body class = "light-purple-background">
  <!--Header-->
  <div class="header">
    <!--Page Heading-->
    <div><a class = "navbar-brand" href = "/"><h1 class="p-1 pl-3 nu-logo">NUBookSwap</h1></a></div>
    <!--Dropdown Menu-->
    <div class="dropdown ml-auto pt-2 pr-3">      
    <button class="btn btn-secondary dropdown-toggle button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{user.firstname}}
    </button>         
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class = "dropdown-item" href = "/profile/{{ user.id }}">Profile</a>
        <a class="dropdown-item" href="/add">Add Book</a>
        <a class="dropdown-item" href="/browse">Browse Books</a>
        <a class="dropdown-item" href="/logout">Logout</a>
    </div>
    </div>
  </div>

  <div class="container">
    <h1>Browse Your Books</h1>
    <div class="row book-display"></div>
    
  </div>
  
  <div class="footer">Copyright &#169 2018 OurTeam</div>
  
 <script>
    let queryURL = "/api/books";
    console.log(queryURL);
    $.ajax({ 
      url: queryURL, 
      method: "GET" 
    }).then(function(data) {
        for (var i = 0; i < data.length; i++){
          let card = $("<div class='card col-md-2 m-sm-3' style= 'width:18rem;border-color: #4E2A84;'>");
          let image = $("<img class='card-img-top mt-sm-2'>");
          image.attr('src', data[i].image);
          let cardBody = $("<div class='card-body'>");
          let cardTitle = $("<h5 class='card-title font-weight-light font-italic text-right'>");
          cardTitle.text( "$" + data[i].price);
          let bookLink = $("<a>");
          bookLink.attr('href', '/browse/' + data[i].id);
          cardBody.append(cardTitle);
          bookLink.append(image);
          card.append(bookLink).append(cardBody);
          $('.book-display').append(card);

          
        }
    });
</script>
</body>
</html>